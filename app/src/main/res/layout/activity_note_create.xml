<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_note_actvity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="ua.primedeym.shoppinglist.Note.CreateNoteActivity">

    <EditText
        android:id="@+id/et_note_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_note_title"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/description"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/button_note_add"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:onClick="addNote"
        android:text="@string/button_add"
        android:textColor="@color/colorPrimary"
        android:layout_above="@+id/et_note_description"
        android:layout_alignEnd="@+id/et_note_description" />

    <EditText
        android:id="@+id/et_note_title"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/title"
        android:inputType="none"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/et_note_description" />
</RelativeLayout>
