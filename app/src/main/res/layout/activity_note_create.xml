<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_note_actvity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ua.primedeym.shoppinglist.Note.CreateNoteActivity">

    <EditText
        android:layout_width="300dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:id="@+id/et_note_description"
        android:hint="Описание заметки"
        android:layout_height="wrap_content" />

    <Button
        android:text="Добавить"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:id="@+id/button_note_add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:onClick="addNote"
        android:elevation="0dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignTop="@+id/button_note_add"
        android:id="@+id/et_note_title"
        android:hint="Название заметки" />
</RelativeLayout>
